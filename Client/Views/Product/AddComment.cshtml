@model CommentViewModel

<form asp-action="Create" asp-controller="Comment" method="post">
    <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
    <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
    <div class="card mt-2">
        <div class="card-body">
            <h5 class="card-title">
                Добавить комментарий
            </h5>
            <div class="form-group">
                <h6 class="card-title"><label asp-for="Rating">Ваша оценка</label></h6>
                <input asp-for="Rating" class="form-control" min="0" max="10" />
            </div>
            <div class="form-group">
                <h6 class="card-title"><label asp-for="Message">Введите текст</label></h6>
                <textarea asp-for="Message" class="form-control"></textarea>
            </div>
            <button class="btn btn-outline-dark btn-sm" type="submit">Добавить комментарий</button>
        </div>
    </div>
</form>
