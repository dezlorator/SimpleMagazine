@model CommentViewModel
@{
    ViewBag.Title = "Редактировать комментарий";
    Layout = "_AdminLayout";
}

<div class="container-fluid w-50">
    <form asp-action="Edit" asp-controller="Comment" method="post">
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
        <input type="hidden" asp-for="UserName" value="@Model.UserName" />
        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
        <div class="card mt-2">
            <div class="card-body">
                <h5 class="card-title">
                    Редактировать комментарий
                </h5>
                <div class="form-group">
                    <h6 class="card-title"><label asp-for="Rating">Ваша оценка</label></h6>
                    <input asp-for="Rating" class="form-control" min="0" max="10" />
                </div>
                <div class="form-group">
                    <h6 class="card-title"><label asp-for="Message">Введите текст</label></h6>
                    <textarea asp-for="Message" class="form-control"></textarea>
                </div>
                <button class="btn btn-outline-dark btn-sm" type="submit">Сохранить</button>
            </div>
        </div>
    </form>
</div>