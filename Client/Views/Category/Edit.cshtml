@model CategoryNode
@{
    ViewBag.Title = "Редактировать категорию";
    Layout = "_AdminLayout";
}

<div class="container-fluid w-50">
    <form asp-action="Edit" asp-controller="Category" method="post">
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <div class="card mt-2">
            <div class="card-body">
                <h5 class="card-title">
                    Редактировать категорию
                </h5>
                <div class="form-group">
                    <h6 class="card-title"><label asp-for="Name">Введите название</label></h6>
                    <textarea asp-for="Name" class="form-control"></textarea>
                </div>
                <button class="btn btn-outline-dark btn-sm" type="submit">Сохранить</button>
            </div>
        </div>
    </form>
</div>