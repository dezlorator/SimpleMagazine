@model Order

<div class="card mt-2">
    <div class="card-body">
        <h3 class="card-title">Оформить заказ</h3>
        <p class="card-text">Пожалуйста, введите информацию о доставке.</p>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>

<form asp-action="Checkout" method="post">
    <input type="hidden" asp-for="Date" value="@DateTime.Now" class="form-control" />
    <div class="card mt-2">
        <div class="card-body">
            <h3 class="card-title">Доставка</h3>
            <div class="form-group">
                <label>ФИО:</label><input asp-for="Name" class="form-control" />
            </div>
        </div>
    </div>
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Адрес</h4>
            <div class="form-group">
                <label>Улица:</label><input asp-for="Street" class="form-control" />
            </div>
            <div class="form-group">
                <label>Дом:</label><input asp-for="House" class="form-control" />
            </div>
            <div class="form-group">
                <label>Квартира:</label><input asp-for="Room" class="form-control" />
            </div>
            <div class="form-group">
                <label>Город:</label><input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label>Область:</label><input asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label>Страна:</label><input asp-for="Country" class="form-control" />
            </div>
            <div class="form-group">
                <label>Индекс:</label><input asp-for="Zip" class="form-control" />
                <div><span asp-validation-for="Zip" class="text-danger"></span></div>
            </div>
        </div>
    </div>
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Опции</h4>
            <div class="checkbox">
                <label>
                    <input asp-for="GiftWrap" /> Подарочная упаковка
                </label>
            </div>
        </div>
    </div>
    <br />
    <div class="text-center">
        <input class="btn btn-success btn-transparent rounded-pill" type="submit" value="Оформить заказ" />
    </div>
    <br />
</form>

