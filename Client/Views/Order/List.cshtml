@model IEnumerable<Order>
@{
    ViewBag.Title = "Необработанные заказы";
    Layout = "_AdminLayout";
}

<div class="card mt-2">
    <div class="card-body">
        <h3 class="card-title">Необработанные заказы</h3>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr><th>Дата</th><th>Пользователь</th><th>Имя</th><th>Индекс</th><th colspan="2">Детали</th><th>Действия</th></tr>
                </thead>
                @foreach (Order o in Model)
                {
                    <tr>
                        <th>@o.Date</th>
                        <th>@o.UserName</th>
                        <th>@o.Name</th>
                        <th>@o.Zip</th>
                        <th>Товар</th>
                        <th>Количество</th>
                        <td style="width:5%">
                            <form asp-action="MarkShipped" method="post">
                                <input type="hidden" name="orderId" value="@o.OrderID" />
                                <button type="submit" class="btn btn-sm btn-success rounded-pill">
                                    Отправить
                                </button>
                            </form>
                        </td>
                    </tr>
                    @foreach (CartLine line in o.Lines)
                    {
                        <tr>
                            <td colspan="2"></td>
                            <td></td>
                            <td></td>
                            <td>@line.Product.Name</td>
                            <td>@line.Quantity</td>
                            <td></td>
                        </tr>
                    }
                }
            </table>
        }
        else
        {
            <div class="text-center">Нет заказов</div>
        }
    </div>
</div>

