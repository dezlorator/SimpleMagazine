@model IEnumerable<Order>
@{
    ViewBag.Title = "Обработанные заказы";
    Layout = "_AdminLayout";
}

<div class="card mt-2">
    <div class="card-body">
        <h3 class="card-title">Обработанные заказы</h3>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr><th>Дата</th><th>Пользователь</th><th>Имя</th><th>Индекс</th><th colspan="2">Детали</th></tr>
                </thead>
                @foreach (Order o in Model)
                {
                    <tr>
                        <th>@o.Date</th>
                        <th>@o.UserName</th>
                        <th>@o.Name</th>
                        <th>@o.Zip</th>
                        <th>Товар</th>
                        <th>Количество</th>
                    </tr>
                    @foreach (CartLine line in o.Lines)
                    {
                        <tr>
                            <td colspan="2"></td>
                            <td></td>
                            <td></td>
                            <td>@line.Product.Name</td>
                            <td>@line.Quantity</td>
                        </tr>
                    }
                }
            </table>
        }
        else
        {
            <div class="text-center">Нет отправленных заказов</div>
        }
    </div>
</div>

