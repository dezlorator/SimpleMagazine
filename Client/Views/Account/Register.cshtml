@model RegisterModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "_AdminLayout";
}

<div class="container-fluid w-50">
    <div class="card mt-2">
        <div class="card-body">
            <h5 class="card-title">
                Регистрация
            </h5>
            <p class="card-text">Заполните все поля чтобы зарегистрироваться.</p>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
    </div>

    <form asp-action="Register" asp-controller="Account" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="card mt-2">
            <div class="card-body">
                <div class="form-group">
                    <h5 class="card-title">
                        <label asp-for="UserName">Имя пользователя</label>
                    </h5>
                    <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <h5 class="card-title">
                        <label asp-for="Email"></label>
                    </h5>
                    <div><span asp-validation-for="Email" class="text-danger"></span></div>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <h5 class="card-title">
                        <label asp-for="Birthday">Дата рождения</label>
                    </h5>
                    <div><span asp-validation-for="Birthday" class="text-danger"></span></div>
                    <input asp-for="Birthday" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <h5 class="card-title">
                        <label asp-for="Password">Пароль</label>
                    </h5>
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <h5 class="card-title">
                        <label asp-for="PasswordConfirm">Подтвердите пароль</label>
                    </h5>
                    <div><span asp-validation-for="PasswordConfirm" class="text-danger"></span></div>
                    <input asp-for="PasswordConfirm" class="form-control" />
                </div>
            </div>
        </div>
        <br />
        <div class="text-center">
            <button class="btn btn-success btn-transparent rounded-pill" type="submit">Зарегистрироваться</button>
        </div>
        <br />
    </form>

</div>