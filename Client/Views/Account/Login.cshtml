@model LoginModel
@{
    ViewBag.Title = "Вход";
    Layout = "_AdminLayout";
}

<div class="container-fluid w-25">
    <div class="card mt-2">
        <div class="card-body">
            <h5 class="card-title">
                Вход
            </h5>
            <p class="card-text">Введите данные для входа в аккаунт.</p>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
    </div>

    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="card mt-2">
            <div class="card-body">
                <div class="form-group">
                    <h5 class="card-title">
                        <label asp-for="Name">Имя пользователя</label>
                    </h5>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <h5 class="card-title">
                        <label asp-for="Password">Пароль</label>
                    </h5>
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
                </div>
            </div>
        </div>
        <br />
        <div class="text-center">
            <button class="btn btn-success btn-transparent rounded-pill" type="submit">Войти в аккаунт</button>
        </div>
        <br />
    </form>

</div>