@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "Роли";
    Layout = "_AdminLayout";
}

<div class="container-fluid w-75">
    <div class="card mt-2">
        <div class="card-body">
            <h3 class="card-title">Список ролей</h3>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Роль</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td style="width:15%">
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger rounded-pill">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <br />
    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary btn-transparent">Добавить роль</a>
        <a asp-action="UserList" class="btn btn-secondary btn-transparent">Список пользователей</a>
    </div>
    <br />
</div>
