@model List<CategoriesChartViewModel>
@{
    ViewBag.Title = "Статистика";
    Layout = "_AdminLayout";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<div class="container-fluid w-75">
    <div class="card mt-2">
        <div class="card-body">
            <h3 class="card-title">Количество заказов</h3>
            @foreach (var category in Model)
            {
                <h5>@category.Category</h5>
                @if (category.Charts.Where(c => c.Quantity == 0).Count() == category.Charts.Count)
                {
                    <p>Нет заказов</p>
                }
                else
                {
                    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(category.Charts.Select(x => x.DimensionOne).ToList());
                    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(category.Charts.Select(x => x.Quantity).ToList());
                    <div class="chart-container">
                        <canvas id="@category.Category.GetHashCode()" style="width:100%; height:200px"></canvas>
                    </div>
                    <script type="text/javascript">
        $(function () {
    var chartName = "@category.Category.GetHashCode()";
         var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
                labels: @Html.Raw(XLabels),
                datasets: [{
                    label: "Количество заказов",
                    backgroundColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'
                    ],
                    borderWidth: 1,
                    data: @Html.Raw(YValues)
    }]
            };


       var myChart = new  Chart(ctx, {
                data: data,
                type:'pie'

            });
        });
                    </script>
                }
            }
        </div>
    </div>
</div>



